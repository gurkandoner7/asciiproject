<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompletedDialogFragment">


    <ImageView
        android:id="@+id/ivCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coffeegif"
        android:paddingBottom="@dimen/dimen_36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.portal.asciiproject.utilities.customviews.AsciiContinueButton
        android:id="@+id/btnGoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/dimen_36dp"
        android:layout_marginBottom="@dimen/dimen_36dp"
        android:text="@string/go_to_homepage"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.portal.asciiproject.utilities.customviews.AsciiTextView
        android:id="@+id/tvCompleted"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:text="@string/completed_text"
        android:textColor="@color/header_text_rv"
        android:textSize="@dimen/ts_18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textAlignment="center"
        app:textType="Regular" />

</androidx.constraintlayout.widget.ConstraintLayout>